<!DOCTYPE html>
<html>
  <head>
    <title>Contact List</title>
    <link href="/Content/CSS/style.css" rel="stylesheet" type="text/CSS">
  </head>
  <body>
    <div id="wrapper">
      <h1>Edit Name</h1>
      <div id="formWrapper">
        <form action="/contacts/edit/name/@Model.GetId()" method="post">
          <label for="firstName">First name</label>
          <input type="text" name="firstName" id="firstName" value="@Model.GetFirstName()" required><br>
          <label for="lastName">Last name</label>
          <input type="text" name="lastName" id="lastName" value="@Model.GetLastName()" required><br>
          <button type="submit">Edit name</button>
        </form>
      </div>
      <a href="/contacts">Go back</a>
    </div>
  </body>
</html>
