<!DOCTYPE html>
<html>
  <head>
    <title>Contact List</title>
    <link href="/Content/CSS/style.css" rel="stylesheet" type="text/CSS">
  </head>
  <body>
    <div id="wrapper">
      <h1>Edit Email</h1>
      <div id="formWrapper">
        <form action="/contacts/edit/email/@Model.GetId()" method="post">
          <label for="email">Email</label>
          <input type="text" name="email" id="email" value="@Model.GetEmail()" required><br>
          <button type="submit">Edit email</button>
        </form>
      </div>
      <a href="/contacts">Go back</a>
    </div>
  </body>
</html>
